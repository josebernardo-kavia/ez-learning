# Example environment variables for local development
# Copy this file to .env and set appropriate values.

# Spring datasource (MySQL for prod-like)
SPRING_DATASOURCE_URL=jdbc:mysql://localhost:3306/ez_learning?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC
SPRING_DATASOURCE_USERNAME=ez_user
SPRING_DATASOURCE_PASSWORD=ez_password

# H2 dev profile (optional; usually configured in application-dev.properties)
# SPRING_H2_CONSOLE_ENABLED=true

# Flyway
SPRING_FLYWAY_ENABLED=true

# Server settings
SERVER_PORT=8080
